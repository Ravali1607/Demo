<core:FragmentDefinition xmlns:cards="sap.f.cards" xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:core= "sap.ui.core"
xmlns= "sap.m"
>
    <Dialog id="purchase" title="Create">
        <form:SimpleForm >
            <form:content>
                <Label text="Id"></Label>
                <Input id="p_id"></Input>
                <Label text="Customer Id"></Label>
                <Input id="p_custId" ></Input>
                <Label text="Item name"></Label>
                <Input id="p_item"></Input>
                <Label text="Item Cost"></Label>
                <Input id="p_cost"></Input>
                <Label text="Purchased Date"></Label>
                <DatePicker id="p_date"></DatePicker>
            </form:content>
        </form:SimpleForm>
        <footer>
            <Toolbar>
                <ToolbarSpacer ></ToolbarSpacer>
                <Button text="Create" press="onCreatePurchase"></Button>
                <Button text="Cancel" press="onCancelPurchase"></Button>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
